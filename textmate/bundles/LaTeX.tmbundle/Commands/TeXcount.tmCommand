<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env bash
[[ -f "${TM_SUPPORT_PATH}/lib/bash_init.sh" ]] &amp;&amp; \
. "${TM_SUPPORT_PATH}/lib/bash_init.sh"

DIRECTORY=$(dirname "${TM_FILEPATH}")
FILENAME=$(basename "${TM_FILEPATH}")
OPTIONS=($TM_TEXCOUNT_OPTIONS)
cd "$DIRECTORY"

texcount -nocol -utf8 -inc "${OPTIONS[@]}" "$FILENAME"</string>
	<key>input</key>
	<string>none</string>
	<key>inputFormat</key>
	<string>text</string>
	<key>keyEquivalent</key>
	<string>^N</string>
	<key>name</key>
	<string>TeXcount</string>
	<key>outputCaret</key>
	<string>afterOutput</string>
	<key>outputFormat</key>
	<string>text</string>
	<key>outputLocation</key>
	<string>toolTip</string>
	<key>requiredCommands</key>
	<array>
		<dict>
			<key>command</key>
			<string>texcount</string>
			<key>locations</key>
			<array>
				<string>/Library/TeX/texbin/texcount</string>
				<string>/usr/texbin/texcount</string>
				<string>/opt/local/bin/texcount</string>
			</array>
		</dict>
	</array>
	<key>scope</key>
	<string>text.tex.latex</string>
	<key>uuid</key>
	<string>361BC324-8D67-4E03-8939-824D4D65916B</string>
	<key>version</key>
	<integer>2</integer>
</dict>
</plist>
